{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "dist",
      "noImplicitAny": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "rootDirs": [
        "source",
        "tests"
      ],
      "baseUrl": "source",
      "paths": {
        "@/*": [
          "*"
        ]
      },
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        }
      ]
    },
    "include": [
      "source",
      "tests"
    ]
}